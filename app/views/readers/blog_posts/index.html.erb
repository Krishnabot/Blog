<h1 class="text-2xl font-bold mb-4">Blog Posts</h1>
<% if @blog_posts.any? %>
  <ul class="list-disc pl-5">
    <% @blog_posts.each do |blog_post| %>
      <li class="mb-2">
        <%= link_to blog_post.title, readers_blog_post_path(blog_post), class: "text-blue-600 hover:underline" %>
        <span class="text-gray-500 text-sm">(<%= blog_post.created_at.strftime('%B %d, %Y') %>)</span>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No blog posts available.</p>
<% end %>