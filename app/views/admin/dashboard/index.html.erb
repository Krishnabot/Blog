<h1 class="text-2xl font-bold mb-4">Admin Dashboard</h1>
<p class="mb-4">Welcome, <%= current_admin.email %>!</p>

<%= link_to 'New Blog Post', new_admin_blog_post_path, class: 'text-blue-600 hover:underline mb-4 inline-block' %>

<h2 class="text-xl font-bold mb-4">Your Blog Posts</h2>
<% if @blog_posts.any? %>
  <ul class="list-disc pl-5">
    <% @blog_posts.each do |blog_post| %>
      <li class="mb-2 [class="mb-2"]>
        <%= link_to blog_post.title, readers_blog_post_path(blog_post), class: "text-blue-600 hover:underline" %>
        <span class="text-gray-500 text-sm">(<%= blog_post.created_at.strftime('%B %d, %Y') %>)</span>
        <%= link_to 'Edit', edit_admin_blog_post_path(blog_post), class: 'text-blue-600 hover:underline ml-2' %>
        <%= link_to 'Delete', admin_blog_post_path(blog_post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-600 hover:underline ml-2' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't created any blog posts yet.</p>
<% end %>